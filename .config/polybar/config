[global/wm]
margin-top = 5
margin-bottom = 5


;=====================================================
;
;   Colors
;
;=====================================================

[colors]
background = #1a1a1a
focused = #2d6276
unfocused = #242b2d
foreground = #ddccbb
green = #00ff00
red = #ff0000
warning = #f5a70a
yellow = #e3e300

;=====================================================
;
;   Top bar
;
;=====================================================

[bar/topbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
offset-x = 0
offset-y = 0
fixed-center = true

overline-size = 0
overline-color = #151515
underline-size = 0
underline-color = #151515
background = #1a1a1a

border-bottom-size = 0
border-bottom-color = #333

spacing = 0
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = DejaVuSansMono Nerd Font:size=9:style=Bold;2
font-1 = Noto:size=9;2
font-2 = Material Icons:size=9;2

modules-left = i3
modules-center = date time
modules-right = xbacklight volume bluetooth battery pkg

tray-position = center
tray-padding = 10
tray-detached = false
tray-offset-y = 0
tray-maxsize = 16
tray-transparent = false

cursor-click = pointer
cursor-scroll = pointer


;=====================================================
;
;   Bottom bar
;
;=====================================================

[bar/botbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 26
offset-x = 0
offset-y = 0
fixed-center = true
bottom = true

overline-size = 0
overline-color = #151515
