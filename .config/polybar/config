padding-right = 0
module-margin-left = 1
module-margin-right = 1

font-0 = DejaVuSansMono Nerd Font:size=9:style=Bold;2

modules-left = usb
modules-center =
modules-right = vpn wlan eth cpu memory keyboard

tray-position = center
tray-padding = 10
tray-detached = false
tray-offset-y = 0
tray-maxsize = 16
tray-transparent = false

cursor-click = pointer
cursor-scroll = pointer

;=====================================================
;
;   Modules
;
;=====================================================

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
pin-workspaces = true

label-focused = %index%
label-focused-background = ${colors.focused}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-background = ${colors.unfocused}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 1

label-visible = %index%
label-visible-background = ${colors.background}
label-visible-foreground = #55
label-visible-padding = 1


[module/cpu]
type = internal/cpu
interval = 1.0

format = <ramp-coreload><label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}

label = %percentage:03%%

ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà

;[module/cpu]
;type = internal/cpu
;interval = 2
;label = CPU: %percentage:2%%
;
;format-background = ${root.background}
;format-foreground = ${root.foreground}


[module/memory]
type = internal/memory
interval = 1

format-prefix = " Ôãõ "
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-margin-top = -5

label = %percentage_used%%

;[module/memory]
;type = internal/memory
;interval = 2
;label = RAM: %percentage_used%%
;
;format-background = ${root.background}
;format-foreground = ${root.foreground}


[module/wlan]
type = internal/network
interface = wlp6s0
interval = 2

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = " ÔÄí %essid%  ÔÇ¨ %local_ip%  ÔÄô %downspeed:9%  ÔÇì %upspeed:9%"
label-connected-foreground = ${colors.green}
label-connected-background = ${colors.background}
label-disconnected = " ÔÅ≤ down "
label-disconnected-foreground = ${colors.red}
label-disconnected-background = ${colors.background}

;[module/wlan]
;type = internal/network
;interface = wlp6s0
;interval = 2
;
;format-connected = <label-connected>
;label-connected = W: %essid%
;label-connected-background = ${root.background}
;label-connected-foreground = ${root.green}
;label-disconnected = W: down
;label-disconnected-background = ${root.background}
;label-disconnected-foreground = ${root.red}


[module/eth]
type = internal/network
interface = enp7s0
interval = 0.5

label-connected = " ÔÉÅ %local_ip% ÔÄô%downspeed:8% ÔÇì %upspeed:8% "
label-connected-foreground = ${colors.green}
label-connected-background = ${colors.background}
label-disconnected = " ÔÑß down "
label-disconnected-foreground = ${colors.red}
label-disconnected-background = ${colors.background}

;[module/eth]
;type = internal/network
;interface = enp7s0
;interval = 2
;
;label-connected = E: %local_ip%
;label-connected-background = ${root.background}
;label-connected-foreground = ${root.green}
;label-disconnected = E: down
;label-disconnected-background = ${root.background}
;label-disconnected-foreground = ${root.red}


[module/time]
type = internal/date
time = "%H:%M"
click-left = pkill -USR1 redshift
interval = 60

label = %time%

format = "<label>"

format-background = ${colors.background}
format-foreground = ${colors.foreground}


[module/date]
type = internal/date
date = "%A %d %b %Y"
click-left = gsimplecal
interval = 60

label = %date%

format = "<label>"
format-background = ${colors.background}
format-foreground = ${colors.foreground}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

time-format = %H:%M

format-charging = " Ôíí <label-charging> "
format-charging-background = ${colors.background}
format-charging-foreground = ${colors.foreground}

format-discharging = " ÔâÅ <label-discharging> "
format-discharging-background = ${colors.background}
format-discharging-foreground = ${colors.foreground}

format-full = " ÔâÄ full "
format-full-background = ${colors.background}
format-full-foreground = ${colors.green}


[module/xbacklight]
type = internal/xbacklight

format = "<ramp>"
format-foreground = ${colors.foreground}

ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

;label = " ÔÉ´ "
;
;bar-width = 8
;bar-indicator = "Ôáõ"
;bar-indicator-foreground = ${colors.foreground}
;bar-indicator-font = 3
;bar-fill = ‚îÄ
;bar-fill-font = 1
;bar-fill-foreground = #4796b4
;bar-empty = ‚îÄ
;bar-empty-font = 1
;bar-empty-foreground = ${colors.foreground}


[module/volume]
type = internal/volume

format-muted = "<label-muted>"
label-muted = Ôë¶
format-muted-foreground = ${colors.foreground}

format-volume = "<ramp-volume>"
format-volume-foreground = ${colors.foreground}
ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®

;format-volume = "<label-volume> <bar-volume> "
;label-volume = " ÔÄ® "
;label-volume-foreground = ${colors.foreground}
;
;format-muted = "<label-muted>  ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ "
;format-muted-foreground = ${colors.red}
;label-muted = " Ôë¶ "
;
;bar-volume-width = 8
;bar-volume-foreground-0 = ${colors.green}
;bar-volume-foreground-1 = ${colors.green}
;bar-volume-foreground-2 = ${colors.green}
;bar-volume-foreground-3 = ${colors.warning}
;bar-volume-foreground-4 = ${colors.warning}
;bar-volume-foreground-5 = ${colors.warning}
;bar-volume-foreground-6 = ${colors.red}
;bar-volume-gradient = false
;bar-volume-indicator = "Ôáõ"
;bar-volume-indicator-font = 3
;bar-volume-fill = ‚îÄ
;bar-volume-fill-font = 1
;bar-volume-empty = ‚îÄ
;bar-volume-empty-font = 1
;bar-volume-empty-foreground = ${colors.foreground}


[module/keyboard]
type = internal/xkeyboard

format = <label-layout>
format-spacing = 0

label-layout = %layout%
label-layout-padding = 2
label-layout-background = ${colors.focused}
label-layout-foreground = ${colors.foreground}


[module/pkg]
type = custom/script
interval = 1200
exec = ~/.config/polybar/pkg.sh

label = "%output:0:30%"
label-foreground = ${colors.foreground}

format-prefix = "ÔÄ° "
format-prefix-foreground = #5b5b5b


[module/bluetooth]
type = custom/script
interval = 10
exec = ~/.config/polybar/bluetooth.sh

label = "%output%"
label-foreground = ${colors.foreground}

format = "<label> "


[module/usb]
type = custom/script
interval = 10
exec = ~/.config/polybar/usb_mount.sh

label = "%output:0:80%"
label-foreground = ${colors.foreground}

format = "<label>"


[module/vpn]
type = custom/script
exec = pgrep openvpn
interval = 10

label = vpn
label-foreground = ${colors.foreground}

format-underline = #268bd2
format-prefix = "ÔÉ¨ "
format-prefix-foreground = #5b5b5b


