[global/wm]
margin-top = 5
margin-bottom = 5

;=====================================================
;
;   Colors
;
;=====================================================

[colors]
background = #1a1a1a
focused = #2d6276
unfocused = #242b2d
foreground = #ddccbb
green = #38b21c
red = #ff0000
warning = #f5a70a
yellow = #e3e300

;=====================================================
;
;   Top bar
;
;=====================================================

[bar/topbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
offset-x = 0
offset-y = 0
fixed-center = false

overline-size = 1
overline-color = #151515
underline-size = 3
underline-color = #151515
background = #1a1a1a

border-bottom-size = 0
border-bottom-color = #333

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 4
module-margin-right = 0

font-0 = Noto Nerd Font:size=10;1
font-1 = DejaVuSansMono Nerd Font:size=11;2
font-2 = Material Icons:size=14;4

modules-left = i3 usb
modules-center = 
modules-right = xbacklight volume battery wlan eth date keyboard

cursor-click = pointer
cursor-scroll = pointer

;=====================================================
;
;   Modules
;
;=====================================================

[module/i3]
type = internal/i3

index-sort = true
pin-workspaces = true

ws-icon-0 = 1;Óèê
ws-icon-1 = 2;Óèë
ws-icon-2 = 3;Óèí
ws-icon-3 = 4;Óèî
ws-icon-4 = 5;Óèï
ws-icon-5 = 6;Óèñ
ws-icon-6 = 7;Óèó
ws-icon-7 = 8;Óèò
ws-icon-8 = 9;Óèô
ws-icon-default = Óèö

format = <label-state> <label-mode>

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
label-focused = "%icon%"
label-focused-background = ${colors.focused}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 4

label-unfocused = "%icon%"
;label-unfocused-background = ${colors.unfocused}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 4

label-urgent = "%icon%"
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 4

label-visible = "%icon%"
label-visible-background = ${colors.background}
label-visible-foreground = #55
label-visible-padding = 4


[module/cpu]
type = internal/cpu
interval = 1.0

format = <ramp-coreload><label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 0

label = %percentage:03%%

ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà


[module/memory]
type = internal/memory
interval = 1

format-prefix = " Ôãõ "
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-margin-top = -5
format-padding = 0

label = %percentage_used%%


[module/wlan]
type = internal/network
interface = wlp6s0
interval = 2

ramp-signal-0 = Ó££
ramp-signal-1 = Ó£§
ramp-signal-2 = Ó£•

label-connected = %essid% (%local_ip%)

format-connected = "<ramp-signal> <label-connected>"
format-connected-underline = ${colors.green}
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-padding = 1

label-disconnected =

format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.foreground}
format-disconnected-background = ${colors.background}
format-disconnected-padding = 1


[module/eth]
type = internal/network
interface = enp7s0
interval = 2

label-connected = "ÔÉÅ %local_ip%"

format-connected = <label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-underline = ${colors.green}
format-connected-padding = 1

label-disconnected =

format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.foreground}
format-disconnected-background = ${colors.background}


[module/date]
type = internal/date

date = "%a %d %b"
time = %H:%M
date-alt = %a %b %d %Y
time-alt = %H:%M:%S

label = %date%, %time%

format = "Ó£ü  <label>"
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-underline = ${colors.focused}
format-padding = 1

interval = 60

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

ramp-capacity-0 = "  ÔâÑ"
ramp-capacity-1 = "  ÔâÉ"
ramp-capacity-2 = "  ÔâÇ"
ramp-capacity-3 = "  ÔâÅ"
ramp-capacity-4 = "  ÔâÄ"

animation-charging-0 = "  ÔâÑ"
animation-charging-1 = "  ÔâÉ"
animation-charging-2 = "  ÔâÇ"
animation-charging-3 = "  ÔâÅ"
animation-charging-4 = "  ÔâÄ"
animation-charging-framerate = 750

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = full

format-charging = "<animation-charging> <label-charging>"
format-charging-background = ${colors.background}
format-charging-foreground = ${colors.foreground}
format-charging-underline = ${colors.focused}
format-charging-padding = 1

format-discharging = "<ramp-capacity> <label-discharging>"
format-discharging-background = ${colors.background}
format-discharging-foreground = ${colors.foreground}
format-discharging-underline = ${colors.warning}
format-discharging-padding = 1

format-full = "ÔâÄ  <label-full>"
format-full-background = ${colors.background}
format-full-foreground = ${colors.green}
label-full-underline = ${colors.green}
format-full-padding = 1


