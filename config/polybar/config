[module/keyboard]
type = internal/xkeyboard

format = <label-layout>

label-layout = %layout%
label-layout-padding = 3
label-layout-background = ${colors.focused}
label-layout-foreground = ${colors.foreground}


[module/pkg]
type = custom/script
interval = 60
exec = ~/.config/polybar/pkg.sh

label = "%output:0:30%"
label-foreground = ${colors.foreground}

format-prefix = "ÔÄ°  "
format-prefix-foreground = #5b5b5b
format-padding = 1


[module/bluetooth]
type = custom/script
interval = 10
exec = ~/.config/polybar/bluetooth.sh

label = "  %output%"
label-foreground = ${colors.foreground}

format = "<label>"
format-padding = 1


[module/usb]
type = custom/script
interval = 5
; Displays the devices in the bar
exec = ~/.config/polybar/usb.sh
; Execute the script if udiskie is runned
exec-if = pgrep -x udiskie

click-left = udiskie-umount --detach -a

label-foreground = ${colors.foreground}

format = "<label>"
format-padding = 1

